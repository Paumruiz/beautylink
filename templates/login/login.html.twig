 {% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

    
    <div class="login-container">
        <div class='beautylink'>beauty.link</div>
        <div class="login-links">
            <a href="{{ path('app_login_clientes') }}" class="soycliente">Soy Cliente</a>
            <a href="{{ path('app_login') }}" class="soycentro active">Soy Centro</a>
        </div>

        <div id='textoinicio' class='textoinicio'>¡Bienvenido! Inicia sesión por favor</div>


        {% if error %}
            <div class="error-message">{{ error.messageKey}}</div>
        {% endif %}

        {{ form_start(loginForm, {'attr': {'class': 'login-form', 'method': 'POST'}}) }}
            <div class="form-group">
                <label for="{{ loginForm.email_centro.vars.id }}" class="form-label">Correo Electrónico</label>
                {{ form_widget(loginForm.email_centro, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}

            </div>
            <div class="form-group">
                <label for="{{ loginForm.password_centro.vars.id }}" class="form-label">Contraseña</label>
                {{ form_widget(loginForm.password_centro, {'attr': {'class': 'form-control', 'placeholder': 'Contraseña'}}) }}

            </div>

            <div class = "buttons-div">
                <button type="submit" class="btn-login">Iniciar sesión</button>
                <a href="{{ path('app_register') }}" class="btn-register">Registrarse</a>
            </div>

        {{ form_end(loginForm) }}

        
    </div>
    <div class="vertical-grey">
        <div class="content">
            <img src="{{ asset('images/coverlogo.png') }}" alt="Imagen" class="center-image">
            <p class="center-text">Transforma tu belleza, simplifica tu gestión.</p>
        </div>
    </div>
{% endblock %}
