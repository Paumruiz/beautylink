{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_errors(registrationForm) }}

     {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email_cliente) }}
        {{ form_row(registrationForm.nombre_cliente) }}
        {{ form_row(registrationForm.apellidos_cliente) }}
        {{ form_row(registrationForm.telefono_cliente) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.id_centro, {label: 'Centro'}) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
