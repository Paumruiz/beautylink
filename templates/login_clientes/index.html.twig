{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <h1>Login</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {{ form_start(loginForm,  {'attr': {'method': 'POST'}}) }}
        {{ form_row(loginForm.email_cliente) }}
        {{ form_row(loginForm.password_cliente) }}

        <button type="submit" class="btn">Login</button>
    {{ form_end(loginForm) }}

     <a href="{{ path('app_login') }}" class="btn">Login Centros</a>
    <a href="{{ path('app_login_clientes') }}" class="btn">Login Clientes</a>
{% endblock %}
